[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target
[Service]
User=root
Group=www-data
WorkingDirectory=/srv/pdc
ExecStart=/srv/pdc/djangoenv/bin/gunicorn \
  --access-logfile - \
  --workers 3 \
  --bind unix:/run/gunicorn.sock \
  pdc.wsgi:application
[Install]
WantedBy=multi-user.target
